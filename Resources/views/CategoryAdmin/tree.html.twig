{% block list_table_standard %}
    <div class="box box-color box-bordered">
        <div class="box-title">
            <h3>
                <i class="icon-table"></i>
                {# TODO: set on configuration #}
            </h3>
        </div>
        <div class="box-content nopadding">
            <div class="row-fluid">
                <div class="span12 page-tree-selector">
                    {{ admin.trans('tree_catalog_title') }}
                    {% if not app.request.get('hide_context') %}
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <strong class="text-info">{{ current_context.name|trans({}, admin.translationdomain) }}</strong> <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                {% for context in contexts %}
                                    <li>
                                        {% if not app.request.isxmlhttprequest %}
                                            {% set link_url = admin.generateUrl('list', { 'context': context.id }  ) %}
                                        {% else %}
                                            {% set link_url = admin.generateUrl('list', { 'context': context.id,  'mode':'tree'}  ) %}
                                        {% endif %}

                                        <a class="rz-admin-filter-reset-button" href="{% if current_context and context.id == current_context.id %}#{% else %}{{ link_url }}{% endif %}">
                                            {% if current_context and context.id == current_context.id %}
                                                <i class="icon-circle"></i>
                                            {% else %}
                                                <i class="icon-circle-blank"></i>
                                            {% endif %}
                                            {{ context.name|trans({}, admin.translationdomain) }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <strong class="text-info">{{ current_context.name|trans({}, admin.translationdomain) }}</strong> <span class="caret"></span>
                            </button>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% if main_category %}
            {{ tree.navigate_child(main_category.children, admin, true) }}
            {% endif %}
        </div>
    </div>
{% endblock %}

