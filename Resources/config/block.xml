<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz_classification.block.category.class">Rz\ClassificationBundle\Block\CategoryBlockService</parameter>
    </parameters>

    <services>


        <service id="rz_classification.block.category" class="%rz_classification.block.category.class%" scope="prototype">
            <tag name="sonata.block"/>
            <argument>rz_classification.block.category</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="sonata.classification.manager.category" />
            <argument type="service" id="sonata.classification.admin.category" />
            <argument>%rz_classification.block.category.templates%</argument>
            <argument>%rz_classification.block.category.ajax_templates%</argument>
            <argument>%rz_classification.settings.category_pager_max_per_page%</argument>
        </service>

    </services>

</container>
