<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz_classification.block.collection_list.class">Rz\ClassificationBundle\Block\CollectionBlockService</parameter>
    </parameters>

    <services>
        <service id="rz_classification.block.collection_list" class="%rz_classification.block.collection_list.class%">
            <tag name="sonata.block"/>
            <argument>rz_classification.block.collection_list</argument>
            <argument type="service" id="templating" />
            <!--<argument type="service" id="service_container" />-->
            <argument type="service" id="sonata.classification.manager.collection" />
            <argument>%rz_classification.block.collection_list.templates%</argument>
        </service>
    </services>

</container>
